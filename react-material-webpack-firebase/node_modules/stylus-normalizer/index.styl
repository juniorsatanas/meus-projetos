prefix-value(property, value)
    // -webkit-{property} {'-webkit-' + value}
    {property} unquote('-webkit-' + value)
    {property} unquote('-moz-' + value)
    {property} unquote('-ms-' + value)
    {property} unquote('-o-' + value)
    {property} value

vendor(property, value)
    -webkit-{property} value
    -moz-{property} value
    -ms-{property} value
    -o-{property} value
    {property} value

user-select(args...)
    vendor('user-select', args)

//we need to make sure that display: flex generates both the old and the new syntaxes
display(value)
    if value is flex
        display -webkit-box
        display -moz-box
        display -ms-flexbox
        display -webkit-flex
        display flex
    else
        display arguments


flex(args...)
    -webkit-box-flex args
    -moz-box-flex args
    -ms-box-flex args
    -ms-flex args
    -webkit-flex args //for safari
    flex args


size(value...)
    width value
    height value

min-size(value)
    min-width value
    min-height value

-convert-justify-value(value)
    if value == flex-start
        return start
    else if value == flex-end
        return end
    else if value == center
        return center

    return justify

justify-content(value)
    -webkit-justify-content value
    -webkit-box-pack value
    flex-pack -convert-justify-value(value)
    -ms-flex-pack -convert-justify-value(value)
    justify-content value

align-items(value)
    -webkit-box-align value
    -webkit-align-items value
    align-items value

align-content(value)
    -webkit-align-content value
    align-content value

flex-flow(value)
    flex-direction value
    vendor(flex-flow, value)
    flex-flow value
    if value == "row"
        -webkit-box-orient horizontal

    if value == "column"
        -webkit-box-orient vertical
        box-orient vertical

absolute-centering()
    margin auto
    position absolute
    top 0
    left 0
    bottom 0
    right 0