$loadmask-background = gray
$loadmask-opacity = 0.5

@keyframes loader-fade
    from
        opacity 1
    to
        opacity 0.25

.loadmask
    .loader
        .loadbar
            border-radius 50px
            box-shadow 0 0 3px rgba(0, 0, 0, 0.2)
            -moz-box-shadow 0 0 3px rgba(0, 0, 0, 0.2)
            -webkit-box-shadow 0 0 3px rgba(0, 0, 0, 0.2)
            -ms-box-shadow 0 0 3px rgba(0, 0, 0, 0.2)
            position absolute
            left 44.5%
            top 37%
            width 12%
            height 26%
            background #000
            -webkit-animation loader-fade 1s linear infinite
            -moz-animation loader-fade 1s linear infinite
            -ms-animation loader-fade 1s linear infinite
            animation loader-fade 1s linear infinite
            opacity 0

        for index in 0..11
            .loadbar-{index+1}
                transform rotate((index*30)deg) translate(0, -142%)
                -webkit-transform rotate((index*30)deg) translate(0, -142%)
                -moz-transform rotate((index*30)deg) translate(0, -142%)
                -ms-transform rotate((index*30)deg) translate(0, -142%)

                -webkit-animation-delay -(index*1s - round(index/12, 4))
                -moz-animation-delay -(index*1s - round(index/12, 4))
                -ms-animation-delay -(index*1s - round(index/12, 4))
                animation-delay -(index*1s - round(index/12, 4))